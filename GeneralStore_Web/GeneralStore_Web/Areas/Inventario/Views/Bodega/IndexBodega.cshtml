
@{
    ViewBag.Title = "IndexBodega";
    Layout = "~/Views/Compartida/_LayoutPrincipal.cshtml";
}

<link href="~/FrontEnd/animate.css" rel="stylesheet" />

<link href="~/FrontEnd/CSS/Degradado.css" rel="stylesheet" />

<link href="~/FrontEnd/DataTable/jquery.dataTables.css" rel="stylesheet" />
@*<link href="~/FrontEnd/DataTable/dataTables.bootstrap.min.css" rel="stylesheet" />*@

<script src="~/FrontEnd/DataTable/jquery.dataTables.js"></script>
@*<script src="~/FrontEnd/DataTable/dataTables.bootstrap.min.js"></script>*@

<div class="col-xs-12 col-md-12 col-sm-12 col-lg-12" id="appVue">

    @*<alertas-noob v-bind:estado-Alerta="estadoAlerta" v-bind:visible-Alerta="visibleAlerta"
                   v-bind:accion-Alerta="accionAlerta" v-bind:texto-Alerta="textoAlerta">

    </alertas-noob>*@ 

    <div class="row" style="margin-bottom:10px;">

        <div class="col-xs-12 col-lg-12">

            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <button class="btn btn-default btn-defaultNoob" v-on:click="NuevaBodega"><i class="fa fa-plus"></i> Nuevo</button>
                </div>
            </div>

        </div>

    </div>

    <div class="row" style="overflow: auto">

        <div class="" v-bind:class="{ 'col-xs-12': estaCreando,'col-sm-8': estaCreando,'col-md-6': estaCreando,'col-lg-6': estaCreando, 'col-lg-12': creando }">

            <div class="card ">
                <div class="card-header cartaVerde d-flex align-items-center">
                    <h2 class="h3 display colorBlanco">Bodegas: </h2>
                </div>
                <div class="card-block">

                    <tabla-noob v-bind:id-tabla="idTabla" v-bind:columnas-noob="columnasNoob" v-bind:data-noob="dataNoob">

                    </tabla-noob>

                </div>
            </div>

        </div>

        <div class="" v-show="estaCreando" v-bind:class="{ 'col-xs-12': estaCreando,'col-sm-4': estaCreando,'col-md-6': estaCreando,'col-lg-6': estaCreando  }">



            <div class="card ">
                <div class="card-header cartaAgregar d-flex align-items-center">
                    <h2 class="h3 display colorBlanco display">Agregar nueva Bodega: </h2>
                </div>
                <div class="card-block">


                    <div class="form-group">
                        <label>Nombre: </label>
                        <input type="text" placeholder="El nombre de la bodega" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Descripciòn: </label>
                        <textarea class="form-control" rows="3" placeholder="La descripciòn de la bodega"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Codigo: </label>
                        <input type="text" placeholder="Codigo de la bodega" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success pull-left"><i class="fa fa-save"></i> Guardar</button>
                        <button class="btn btn-default pull-right btn-defaultNoob" v-on:click="CerrarForm"><i class="fa fa-close"></i> Cancelar</button>
                    </div>

                </div>
            </div>



        </div>



    </div>


</div>

<script src="~/scripts/JS/Inventario/Bodega.js"></script>


